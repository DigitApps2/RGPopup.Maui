<?xml version="1.0" encoding="utf-8" ?>
<rg:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:rg="clr-namespace:RGPopup.Maui.Pages;assembly=RGPopup.Maui"
              x:Class="RGPopup.Samples.Pages.SystemOffsetPage">
  <ContentView VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Padding="5,5,5,5" BackgroundColor="Red">
    <Grid IgnoreSafeArea="False" RowDefinitions="*,50" BackgroundColor="White" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
      <StackLayout Grid.Row="0" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <Label x:Name="InfoLabel" TextColor="DarkGray"/>
        <Button Text="Close Popup" TextColor="Red" Clicked="OnClose"/>
        <Entry Placeholder="Keyboard Test Entry" PlaceholderColor="DarkGray"/>
      </StackLayout>
      <Entry Grid.Row="1" Placeholder="Keyboard Test Entry End" PlaceholderColor="DarkGray" VerticalOptions="End"/>
    </Grid>
  </ContentView>
</rg:PopupPage>