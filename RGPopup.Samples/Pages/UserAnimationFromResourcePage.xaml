<?xml version="1.0" encoding="utf-8" ?>
<rg:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:rg="clr-namespace:RGPopup.Maui.Pages;assembly=RGPopup.Maui"
              x:Class="RGPopup.Samples.Pages.UserAnimationFromResourcePage"
              Animation="{StaticResource PopupMoveRightAnimation}">
    <ContentView>
        <StackLayout VerticalOptions="Center"
                     HorizontalOptions="Center">
            <Frame BackgroundColor="Silver">
                <StackLayout Spacing="20">
                    <Label HorizontalOptions="Center"
                           Text="Animation using Resources"
                           FontSize="16" />
                    <Button Text="Close"
                            Clicked="OnClose" />
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentView>
</rg:PopupPage>