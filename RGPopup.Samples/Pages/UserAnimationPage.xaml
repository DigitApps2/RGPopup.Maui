<?xml version="1.0" encoding="utf-8" ?>
<rg:PopupPage x:Class="RGPopup.Samples.Pages.UserAnimationPage"
              xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:animations="clr-namespace:RGPopup.Samples.Animations;assembly=RGPopup.Samples"
              xmlns:rg="clr-namespace:RGPopup.Maui.Pages;assembly=RGPopup.Maui"
              AndroidTalkbackAccessibilityWorkaround="True">
    <rg:PopupPage.Animation>
        <animations:UserAnimation />
    </rg:PopupPage.Animation>
    <ContentView>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <Frame BackgroundColor="Silver">
                <StackLayout Spacing="20">
                    <Label FontSize="16"
                           HorizontalOptions="Center"
                           Text="User Animation" />
                    <Button Clicked="OnClose" Text="Close" />
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentView>
</rg:PopupPage>